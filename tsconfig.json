{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["esnext"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowJs": true,
		"resolveJsonModule": true,
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noEmit": true
	},
	"exclude": ["dist", "src/unused/rollup.ts"]
}
